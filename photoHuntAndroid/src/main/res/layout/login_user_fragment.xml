<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">

    <EditText
        android:id="@+id/login_userid"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_email_grey600_18dp"
        android:drawablePadding="8dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_userid"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_lock_grey600_18dp"
        android:drawablePadding="8dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:background="@drawable/grey50_button"
        android:id="@+id/login_lost_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="@string/lost_password"
        android:textColor="@color/material_teal_A500"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>