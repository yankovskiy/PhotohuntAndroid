<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="@dimen/min_avatar_size"
        android:layout_height="@dimen/min_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"

        android:src="@drawable/no_avatar" />

    <TextView
        android:id="@+id/message_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/message_avatar"
        android:textColor="@color/grey505050"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message_from"
        android:layout_below="@+id/message_from"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_from"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>