<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/unread_comments_list_item_avatar"
        android:layout_width="@dimen/min_avatar_size"
        android:layout_height="@dimen/min_avatar_size"
        android:layout_alignParentTop="true"
        android:background="@drawable/avatar_border" />

    <TextView
        android:id="@+id/unread_comments_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/unread_comments_list_item_image"
        android:layout_toRightOf="@+id/unread_comments_list_item_avatar"
        android:textColor="@color/grey505050"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/unread_comments_list_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unread_comments_list_author"
        android:layout_below="@+id/unread_comments_list_author"
        android:layout_toLeftOf="@+id/unread_comments_list_item_image"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/unread_comments_list_item_image"
        android:layout_width="@dimen/min_avatar_size"
        android:layout_height="@dimen/min_avatar_size"
        android:layout_alignParentRight="true"
        android:background="@drawable/avatar_border" />

</RelativeLayout>