<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/gray_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/material_grey_50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/your_profile"/>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_title"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="@color/light_grey"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_displayname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/grey_header"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:textColor="@color/material_grey_50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/profile_subject_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profile_displayname"
                android:layout_marginBottom="16dp"
                android:background="@color/material_grey_600" />

            <TextView
                android:id="@+id/profile_card_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_email_grey600_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:layout_below="@+id/profile_subject_delimiter" />

            <TextView
                android:id="@+id/profile_card_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_card_userid"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_stars_grey600_24dp"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <View
                android:id="@+id/profile_button_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profile_card_balance"
                android:layout_marginTop="16dp"
                android:background="@color/material_grey_600" />

            <TextView
                android:id="@+id/profile_button_remove"
                android:layout_width="wrap_content"
                android:layout_height="48dp"

                android:gravity="center_vertical"
                android:text="@string/remove_button"
                android:textColor="@color/material_teal_A500"
                android:textSize="14sp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:layout_below="@+id/profile_button_delimiter"
                android:layout_toLeftOf="@+id/profile_button_edit"
                android:layout_toStartOf="@+id/profile_button_edit" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/profile_button_edit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/edit_button"
                android:textColor="@color/material_teal_A500"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/profile_button_delimiter"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>