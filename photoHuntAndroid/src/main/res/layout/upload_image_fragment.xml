<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <RelativeLayout
        android:id="@+id/upload_loading_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/upload_hide_when_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/upload_subject_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/upload_image_attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_image_attention"
                android:textSize="12sp"
                android:textColor="@color/attention_color"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:layout_below="@+id/upload_image_attention"
                android:id="@+id/upload_new_subject"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textCapSentences"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/upload_subject_help"
                android:drawableLeft="@drawable/ic_whatshot_grey600_18dp"
                android:drawablePadding="8dp"
                android:hint="@string/new_subject"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textSize="16sp" />

            <ImageView
                android:background="@drawable/grey50_button"
                android:padding="6dp"
                android:id="@+id/upload_subject_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help_grey600_24dp"
                android:layout_alignBottom="@+id/upload_new_subject"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_subject_block"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</LinearLayout>