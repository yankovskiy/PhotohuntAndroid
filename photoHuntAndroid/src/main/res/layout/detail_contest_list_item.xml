<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/light_grey"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_contest_list_item_subject"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/grey_header"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:textColor="@color/material_grey_50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/detail_contest_subject_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/detail_contest_list_item_subject"
                android:background="@color/material_grey_600" />

            <ImageView
                android:id="@+id/detail_contest_list_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_contest_subject_delimiter"
                android:layout_gravity="center_horizontal" />

            <View
                android:id="@+id/detail_contest_image_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/detail_contest_list_item_image"
                android:background="@color/material_grey_600" />

            <RelativeLayout
                android:id="@+id/detail_contest_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_contest_image_delimiter"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/detail_contest_list_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/ic_account_box_grey600_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_contest_list_item_vote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_thumb_up_grey600_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_contest_user_ops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_contest_image_delimiter">

                <TextView
                    android:id="@+id/detail_contest_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"

                    android:gravity="center_vertical"
                    android:text="@string/remove_button"
                    android:textColor="@color/material_teal_A500"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/detail_contest_edit"
                    android:layout_toStartOf="@+id/detail_contest_edit" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/detail_contest_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="@string/edit_button"
                    android:textColor="@color/material_teal_A500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/detail_contest_data_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/detail_contest_data"
                android:background="@color/material_grey_600" />

            <ImageView
                android:id="@+id/detail_contest_list_item_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/detail_contest_data_delimiter"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:padding="6dp"
                android:src="@drawable/ic_thumb_up_grey600_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>