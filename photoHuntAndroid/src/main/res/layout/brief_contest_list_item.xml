<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/light_grey"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/brief_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/grey_header"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/brief_contest_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_grey_50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:id="@+id/brief_context_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_action_overflow_white_24dp" />
            </RelativeLayout>

            <View
                android:id="@+id/brief_subject_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/brief_header"
                android:layout_marginBottom="16dp"
                android:background="@color/material_grey_600" />

            <TextView
                android:id="@+id/brief_contest_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/brief_subject_delimiter"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_account_box_grey600_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/brief_contest_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/brief_contest_author"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_stars_grey600_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/brief_contest_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/brief_contest_reward"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_access_time_grey600_edit_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/brief_contest_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/brief_contest_open"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_access_time_grey600_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/brief_contest_works"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/brief_contest_close"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_crop_original_grey600_24dp"
                android:drawablePadding="8dp"
                android:textSize="14sp" />

            <View
                android:id="@+id/brief_button_delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/brief_contest_works"
                android:layout_marginTop="16dp"
                android:background="@color/material_grey_600" />

            <TextView
                android:id="@+id/brief_contest_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/brief_button_delimiter"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/light_grey_button"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:textColor="@color/material_teal_A500"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>