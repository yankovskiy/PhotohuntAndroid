<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding" 
    android:paddingBottom="4dp"
    android:paddingTop="4dp" >

    <TextView
        android:id="@+id/stats_list_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_whatshot_grey600_24dp"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stats_list_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_account_box_grey600_24dp"
        android:gravity="center_vertical"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/stats_list_item_close_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_access_time_grey600_24dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_toLeftOf="@+id/stats_list_item_works"
            android:layout_marginRight="8dp"
            android:id="@+id/stats_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/stats_list_item_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/stats_list_item_reward"
            android:drawableLeft="@drawable/ic_crop_original_grey600_24dp"
            android:textSize="14sp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/stats_list_item_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_stars_grey600_24dp"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>