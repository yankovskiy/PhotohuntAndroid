<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_stats_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/gray_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/material_grey_50"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/user_stats_loading_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_stats_hide_when_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_stats_title">

        <ListView
            android:id="@+id/users_stats_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/material_grey_600"
            android:dividerHeight="0.5dp" />
    </RelativeLayout>


</RelativeLayout>