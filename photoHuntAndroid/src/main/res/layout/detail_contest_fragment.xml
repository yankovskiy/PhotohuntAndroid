<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/loading_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hide_when_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_bg" >

            <TextView
                android:id="@+id/detail_contest_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_action_subject"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_contest_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_contest_subject"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_action_edit_person"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detail_contest_close_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/detail_contest_subject"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/ic_action_edit_time"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/detail_contest_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/detail_contest_bottom"
            android:layout_below="@+id/detail_header" >
        </ListView>

        <LinearLayout
            android:id="@+id/detail_contest_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/detail_contest_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/grey_button"
                android:padding="5dp"
                android:src="@drawable/ic_action_camera" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>