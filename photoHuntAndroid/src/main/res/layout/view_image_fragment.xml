<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_image_header"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gray_bg" >

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/view_image_contest_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/material_grey_50"
            android:drawableLeft="@drawable/ic_whatshot_white_24dp"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:padding="6dp"
            android:src="@drawable/ic_action_overflow_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/view_image_context_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_image_vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_image_context_button"
            android:textColor="@color/material_grey_50"
            android:drawableLeft="@drawable/ic_thumb_up_white_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textSize="14sp" />

    </RelativeLayout>

    <ImageView
        android:layout_below="@+id/view_image_header"
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>